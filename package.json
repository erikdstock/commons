{
  "name": "@nycdsa/commons-ui",
  "version": "1.0.0",
  "description": "Common style guide and component library for React DSA projects",
  "license": "MIT",
  "scripts": {
    "start": "yarn docz dev",
    "clean-lib": "rm -rf ./lib",
    "build": "yarn run clean-lib && yarn build:types && npm run build:js",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" -s --source-maps inline",
    "build:types": "tsc --declaration --emitDeclarationOnly --listEmittedFiles",
    "build:watch": "concurrently --raw --kill-others 'yarn build:js -w' 'yarn build:types -w'",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check -- --watch",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "lint": "tslint --project tsconfig.json 'src/*/**' && yarn prettier-check",
    "prepublishOnly": "yarn clean && yarn compile && yarn type-declarations",
    "prettier-check": "prettier --check 'src/**/*.{ts,tsx}'",
    "prettier-project": "yarn prettier --write 'src/**/*.{ts,tsx}'"
  },
  "main": "./lib/index.js",
  "peerDependencies": {
    "styled-components": "^4.1.3"
  },
  "dependencies": {
    "@types/rebass": "^3.0.3",
    "@types/styled-system": "^3.2.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "rebass": "^3.1.0",
    "styled-system": "^4.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@storybook/addon-actions": "^5.0.6",
    "@storybook/addon-knobs": "^5.0.6",
    "@storybook/addon-links": "^5.0.6",
    "@storybook/addons": "^5.0.6",
    "@storybook/react": "^5.0.6",
    "@types/jest": "^23.3.12",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/react-test-renderer": "^16.0.3",
    "@types/styled-components": "^4.1.8",
    "babel-loader": "8.0.4",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-plugin-styled-components": "^1.10.0",
    "concurrently": "^4.1.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "jest-styled-components": "^6.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "react-docgen-typescript": "^1.12.3",
    "react-test-renderer": "^16.7.0",
    "styled-components": "^4.1.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.2.4",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn tslint --project tsconfig.json --fix",
      "yarn prettier --write",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/*"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/src"
    ],
    "setupFiles": [
      "<rootDir>/jest.config.ts"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      ".(ts|tsx)": "babel-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js|jsx)$",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/www/"
    ]
  }
}
