{
  "name": "@nycdsa/commons-ui",
  "version": "1.0.0",
  "description": "Common style guide and component library for React DSA projects",
  "license": "MIT",
  "scripts": {
    "start": "yarn docz dev",
    "clean-lib": "rm -rf ./lib",
    "build": "yarn run clean-lib && yarn build:types && npm run build:js",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" -s --source-maps inline",
    "build:types": "tsc --declaration --emitDeclarationOnly --listEmittedFiles",
    "build:watch": "concurrently --raw --kill-others 'yarn build:js -w' 'yarn build:types -w'",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check -- --watch"
  },
  "main": "./lib/index.js",
  "dependencies": {
    "@types/rebass": "^3.0.3",
    "@types/styled-system": "^3.2.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "rebass": "^3.0.1",
    "styled-system": "^4.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^23.3.12",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/react-test-renderer": "^16.0.3",
    "@types/styled-components": "^4.1.8",
    "babel-loader": "8.0.4",
    "babel-plugin-styled-components": "^1.10.0",
    "concurrently": "^4.1.0",
    "jest": "^23.6.0",
    "jest-styled-components": "^6.3.1",
    "react-docgen-typescript": "^1.12.3",
    "react-test-renderer": "^16.7.0",
    "styled-components": "^4.1.3",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.4",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1"
  },
  "peerDependencies": {
    "styled-components": "^4.1.3"
  }
}
